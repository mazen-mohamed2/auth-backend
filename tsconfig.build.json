{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
        "module": "commonjs",                 // 👈 force CJS output

    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true
  },
  "include": ["src/**/*.ts"],                       // ← only src
  "exclude": ["node_modules", "test", "dist", "**/*.spec.ts", "netlify/**"]  // ← exclude functions
}
